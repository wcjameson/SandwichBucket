@model List<Ingredient>

<h1>Ingredients</h1>

@if (@Model.Count == 0)
{
  <h3>No Ingredients</h3>
  <img src="/img/baby.gif" />
}
else
{
  <table>
      @foreach (Ingredient i in Model)
      {
            <tr>
              <td class="ing"><span class="stylized">@i.Name</span>
                <br />@i.Description
                <br />@Html.ActionLink("Check It Out", "Details", "Ingredients", new { id = i.IngredientId })
              </td>
            </tr>
      }
  </table>
}

<a href="/Ingredients/Create"><button type=button>MAKE YOURSELF UP ONE</button></a>
