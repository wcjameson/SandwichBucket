@model SandwichBucket.Models.Ingredient

<h1 class="are-you-sure">ARE YOU SURE YOU WANT TO DELETE THIS?</h1>

<h1>@Model.Name</h1>

<h4>Description: @Model.Description</h4>

@if (Model.Sandwiches.Count != 0)
{
  <h2>Sandwiches</h2>
  <ul>
  @foreach (var s in Model.Sandwiches.Select(s => s.Sandwich).ToList())
  {
    <li>@s.Name / @s.Description</li>
  }
  </ul>
}

@if (Model.Tags.Count != 0)
{
  <hr />
  <h2>Tags</h2>
  <ul>
  @foreach (var t in Model.Tags.Select(t => t.Tag).ToList())
  {
    <li>@t.Name</li>
  }
  </ul>
}
<br />
@using (Html.BeginForm())
{
  <button class="delete-button">MAKE SURE YOU'RE SURE BEFORE YOU HIT THIS BUTTON</button>
}