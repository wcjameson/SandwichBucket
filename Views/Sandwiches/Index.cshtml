@model List<Sandwich>

<h1>Sandwiches</h1>

@if (@Model.Count == 0)
{
  <h3>No Sandwiches</h3>
  <img src="/img/baby.gif" />
}
else
{
  @foreach (Sandwich s in Model)
  {
    <li>
      <ul>
        <li><span class="stylized">@s.Name</span>
          <br />@s.Description
          <br />@Html.ActionLink("Check It Out", "Details", "Sandwiches", new { id = s.SandwichId })
        </li>

        @*
        @if (s.Ingredients.Count != 0)
        {
          <li><ul>
          @foreach (Ingredient i in s.Ingredients)
          {
            <li>INGREDIENT: @i.Name / @i.Description</li>
          }
          </ul></li>
        }

        @if (s.Tags.Count != 0)
        {
          <li><ul>
          @foreach (Tag t in s.Tags)
          {
            <li>TAG: @t.Name</li>
          }
          </ul></li>
        }
        *@
      </ul>
    </li>
  }
}